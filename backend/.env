# EvolveYou Backend Environment Variables

# Firebase Configuration
FIREBASE_PROJECT_ID=evolveyou-prod
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY=your_private_key_here
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@evolveyou-prod.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40evolveyou-prod.iam.gserviceaccount.com

# Database Configuration
FIRESTORE_DATABASE_URL=https://evolveyou-prod-default-rtdb.firebaseio.com
FIRESTORE_COLLECTION_PREFIX=prod_

# Storage Configuration
STORAGE_BUCKET=evolveyou-prod.firebasestorage.app
STORAGE_BASE_URL=https://firebasestorage.googleapis.com/v0/b/evolveyou-prod.firebasestorage.app/o

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_BASE_PATH=/api/v1
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
PASSWORD_SALT_ROUNDS=12

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=vendas.magnus@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=vendas.magnus@gmail.com

# Nutrition API
NUTRITION_API_KEY=your_nutrition_api_key_here
NUTRITION_API_BASE_URL=https://api.nutritionix.com/v1_1

# Environment
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Features
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
CACHE_TTL=3600

# AI Coach Configuration
AI_COACH_MODEL=gemini-pro
AI_COACH_MAX_TOKENS=1000
AI_COACH_TEMPERATURE=0.7
AI_COACH_TIMEOUT=30000

# Anamnesis Configuration
ANAMNESIS_QUESTIONS_COUNT=22
ENABLE_HORMONE_CALCULATIONS=true
ENABLE_STEROID_CALCULATIONS=true

# Workout Configuration
WORKOUT_PLAN_DURATION_DAYS=45
ENABLE_WORKOUT_SUBSTITUTIONS=true
ENABLE_MACRO_REDISTRIBUTION=true

# Shopping List Configuration
ENABLE_GEOLOCATION=true
SHOPPING_LIST_RADIUS_KM=10
ENABLE_PRICE_COMPARISON=true

